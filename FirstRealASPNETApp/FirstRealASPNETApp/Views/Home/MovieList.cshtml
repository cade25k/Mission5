@{
    ViewData["Title"] = "Movie List";
}

@model List<Movie>

<table class="table table-bordered table-light table-striped">

    <thead class="font-weight-bolder">
        <tr>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Category</td>
            <td>Edited?</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.title</td>
            <td>@x.year</td>
            <td>@x.director</td>
            <td>@x.rating</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.edited</td>
            <td>@x.lentTo</td>
            <td>@x.notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieId">Delete</a></td>
        </tr>
        }
    </tbody>

</table>